<div class="form-group">
  <label for="inputTitle">Client Name</label>
  {{view Ember.TextField value=name id="inputTitle"}}
</div>
<div class="form-group">
  <label for="inputRedirect">Redirect URI</label>
  {{view Ember.TextField value=redirect_uri id="inputRedirect"}}
</div>
<div class="form-group">
  <label for="inputImage">Image URI</label>
  {{view Ember.TextField value=image_uri id="inputImage"}}
</div>


<input type="text" disabled="disabled" {{bind-attr value=id}} id="id"/>
{{#if client_secret}}
  <label for="client_secret" style="color:red; font-size: 20px;">Save this secret below, you will never see it again:</label>
  <input type="text" disabled="disabled" {{bind-attr value=client_secret}} id="client_secret"/>
{{/if}}
