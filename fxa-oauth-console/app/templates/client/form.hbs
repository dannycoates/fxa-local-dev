<div class="form-group">
  <label for="inputTitle">Client Name</label>
  {{view Ember.TextField value=name id="inputTitle"}}
</div>
<div class="form-group">
  <label for="inputRedirect">Redirect URI</label>
  {{view Ember.TextField value=redirect_uri id="inputRedirect"}}
</div>
<div class="form-group">
  <label for="inputImage">Image URI</label>
  {{view Ember.TextField value=image_uri id="inputImage"}}
</div>
{{#if id}}
<div class="form-group">
  <label for="id">Client Id:</label>
  <pre>{{id}}</pre>
</div>
{{/if}}

{{#if secret}}
  <label for="secret" >Client Secret</label>
  <pre>{{secret}}</pre>
  <p style="color:red; font-size: 20px;">Save this secret above, you will never see it again.</p>
{{/if}}
