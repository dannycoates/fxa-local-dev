<div id="main-content" class="card">
  <header>
    <h1 id="pair-header">{{#t}}Connect another device{{/t}}</h1>
  </header>

  <section>
    <div class="error"></div>

    <div class="graphic {{ graphicId }}">Ready the code scanner on your Firefox app.</div>
    <p>Ready the code scanner on your Firefox app.</p>

    <form novalidate>
      <div class="button-row">
        <button id="start-pairing" type="submit">Show code</button>
      </div>
    </form>

    <div class="links">
      <a href="{{downloadAppLink}}" rel="noopener noreferrer" target="_blank">Get App</a>
    </div>

  </section>
</div>
