<header>
  <h1 id="fxa-confirm-reset-password-header">{{#t}}Reset email sent{{/t}}</h1>
</header>

<section>
  <div class="error"></div>
  <div class="success">{{#t}}Email resent{{/t}}</div>

  <div class="graphic graphic-mail">{{#t}}Email Sent{{/t}}</div>

  <p class="verification-email-message">{{#t}}A reset link has been sent to %(email)s{{/t}}</p>

  <div class="links">
    <a href="/signin" class="sign-in">{{#t}}Sign in{{/t}}</a><br>
    <a id="resend" class="resend-email" href="#">{{#t}}Resend email{{/t}}</a>
  </div>

</section>
