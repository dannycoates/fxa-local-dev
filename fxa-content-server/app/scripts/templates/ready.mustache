<header>
  {{#signIn}}
  <h1 id="fxa-sign-in-complete-header">{{#t}}Signed in successfully{{/t}}</h1>
  {{/signIn}}
  {{#signUp}}
  <h1 id="fxa-sign-up-complete-header">{{#t}}Account verified{{/t}}</h1>
  {{/signUp}}
  {{#resetPassword}}
  <h1 id="fxa-reset-password-complete-header">{{#t}}Password reset{{/t}}</h1>
  {{/resetPassword}}
</header>

<section>
  <div class="error"></div>

  <div class="graphic graphic-checkbox">{{#t}}Success{{/t}}</div>

  {{#service}}
    <p>{{#t}}You are now ready to use %(serviceName)s{{/t}}</p>
  {{/service}}
  {{^service}}
    <p>{{#t}}Your account is ready!{{/t}}</p>
  {{/service}}

  {{#showSignUpMarketing}}
    <aside class="marketing desktop image-snippet default">
      <div class="marketing-spacer">
        <span class="android-logo" />
        <span class="marketing-copy">{{#t}}Stay in sync on the go:{{/t}}</span>
        <a href="http://mzl.la/KBozcn" target="_blank">{{#t}}Get Firefox for Android{{/t}}</a>
      </div>
    </aside>
  {{/showSignUpMarketing}}

  {{#showSignUpSurvey}}
    <aside class="marketing desktop text-snippet survey">
        <span class="marketing-copy">We're making Firefox Accounts better for you.</span>
        <a href="http://mzl.la/1oV7jUy" target="_blank">Help us by taking this quick survey.</a>
    </aside>
  {{/showSignUpSurvey}}
</section>
