<header>
  <h1 id="fxa-signin-header">{{#t}}Firefox Accounts{{/t}}</h1>

  <h2>{{#t}}Sign in{{/t}}</h2>
</header>

<section>
  <div class="error"></div>

  <form>
    <div class="input-row">
      <input type="email" class="email" placeholder="{{#t}}Email{{/t}}" autofocus>
    </div>

    <div class="input-row password-row">
      <input type="password" class="password" placeholder="{{#t}}Password{{/t}}" pattern=".{8,}">

      <label for="show-password">
        <span class="show-password-label-text">{{#t}}Show{{/t}}</span>
        <input id="show-password" type="checkbox" class="show-password">
      </label>

      <div class="input-help">{{#t}}Must be at least 8 characters{{/t}}</div>
    </div>

    <div class="button-row">
      <button type="submit" disabled>{{#t}}Sign in{{/t}}</button>
    </div>
  </form>

  <div class="links">
    <a href="/reset_password" class="left">{{#t}}Forgot password?{{/t}}</a>
    <a href="/signup" class="right">{{#t}}Create an account{{/t}}</a>
  </div>
</section>
