<header>
  <h1 id="fxa-signin-header">{{#t}}Firefox Accounts{{/t}}</h1>

  <h2>{{#t}}Sign in{{/t}}</h2>
</header>

<section>
  <div class="error"></div>

  <form>
    <div class="input-row">
      <input type="email" class="email" placeholder="{{#t}}Email{{/t}}">
    </div>

    <div class="input-row">
      <input type="password" class="password" placeholder="{{#t}}Password{{/t}}" pattern=".{8,}">
    </div>

    <div class="button-row">
      <button type="submit" disabled>{{#t}}Sign In{{/t}}</button>
    </div>
  </form>

  <div class="links">
    <a href="">{{#t}}Forgot Password{{/t}}</a> â€¢ <a href="/signup">{{#t}}Create Account{{/t}}</a>
  </div>
</section>
