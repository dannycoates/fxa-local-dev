<header>
  <h1>{{#t}}Firefox Accounts{{/t}}</h1>
  <h2 id="fxa-settings-header">{{#t}}Hi,{{/t}} {{ email }}</h2>
</header>

<section>
  <div class="error"></div>
  <div class="success">{{#t}}Password changed{{/t}}</div>

  <form>
    <div class="input-row">
      <input type="password" class="password" id="old_password" placeholder="{{#t}}Old password{{/t}}" pattern=".{8,}" autofocus required>
    </div>

    <div class="input-row">
      <input type="password" class="password" id="new_password" placeholder="{{#t}}New password{{/t}}" pattern=".{8,}" required>
    </div>

    <div class="button-row">
      <button type="submit" disabled>{{#t}}Change Password{{/t}}</button>
    </div>
  </form>

  <div class="links">
    <a id="signout" class="left" href="#">{{#t}}Sign out{{/t}}</a>
    <a id="delete_account" class="right" href="/delete_account">{{#t}}Delete account{{/t}}</a>
  </div>
</section>
