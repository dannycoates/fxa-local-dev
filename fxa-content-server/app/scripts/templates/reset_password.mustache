<header>
  <h1 class="fox-logo"><span>{{#t}}Firefox Accounts{{/t}}</span></h1>
  <h2 id="fxa-reset-password-header">{{#t}}Reset password{{/t}}</h2>
</header>

<section>
  <div class="error"></div>

  <form novalidate>
    <p>{{#t}}Enter your email to reset&nbsp;the account password.{{/t}}</p>

    <div class="input-row">
      <input name="email" type="email" class="email" placeholder="{{#t}}Email{{/t}}" value="{{ email }}" autofocus required>
    </div>

    <div class="button-row">
      <button type="submit" class="disabled">{{#t}}Next{{/t}}</button>
    </div>
  </form>

  {{#backEnabled}}
    <div class="links">
      <a id="back" href="/signin">{{#t}}Back{{/t}}</a>
    </div>
  {{/backEnabled}}
</section>
